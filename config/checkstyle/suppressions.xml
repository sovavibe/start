<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!--
    Spotless Palantir Java Format Compatibility:
    These formatting-related checks are suppressed because Palantir Format manages formatting.
    Palantir Format controls: whitespace, indentation, line wrapping, operator placement.
    These suppressions are necessary to avoid conflicts between formatter and linter.
    -->
    <suppress checks="WhitespaceAround" files=".*"/>
    <suppress checks="LineLength" files=".*\.java$"/>
    <suppress checks="Indentation" files=".*\.java$"/>
    <suppress checks="OperatorWrap" files=".*\.java$"/>
    <suppress checks="GenericWhitespace" files=".*\.java$"/>

    <!--
    Lombok compatibility: Suppress MissingJavadocMethod ONLY for Lombok-generated methods
    Lombok generates getters, setters, equals, hashCode, toString, constructors
    These methods follow standard JavaBean conventions and don't need javadoc
    Pattern matches entity/DTO classes by package path (more reliable than filename)
    -->
    <suppress
            checks="MissingJavadocMethod"
            files=".*/entity/.*\.java$|.*/dto/.*\.java$|.*/record/.*\.java$|.*Entity\.java$|.*Dto\.java$|.*Record\.java$"
            message=".*"/>

    <!--
    Lombok compatibility: Suppress JavadocVariable ONLY for private fields with Lombok annotations
    Lombok @Getter/@Setter/@Data generate accessors, fields don't need javadoc
    Pattern matches entity/DTO classes by package path (more reliable than filename)
    -->
    <suppress
            checks="JavadocVariable"
            files=".*/entity/.*\.java$|.*/dto/.*\.java$|.*/record/.*\.java$|.*Entity\.java$|.*Dto\.java$|.*Record\.java$"
            message=".*"/>

    <!--
    Framework compatibility: Suppress MissingJavadocMethod for all methods in View classes
    Jmix/Vaadin View classes contain framework lifecycle methods (onInit, onReady, etc.)
    These methods are framework callbacks and follow framework conventions
    All methods in View classes are framework-related and don't require javadoc
    -->
    <suppress
            checks="MissingJavadocMethod"
            files=".*View\.java$"
            message=".*"/>

    <!--
    Framework compatibility: Suppress JavadocVariable for @ViewComponent fields
    @ViewComponent fields are framework-injected UI components, don't need javadoc
    Pattern matches View classes
    -->
    <suppress
            checks="JavadocVariable"
            files=".*View\.java$"
            message=".*"/>

    <!--
    Framework compatibility: Suppress JavadocVariable for @RequiredArgsConstructor final fields
    Config/Service classes use constructor injection via Lombok @RequiredArgsConstructor
    Final fields injected via constructor don't need javadoc (dependency injection pattern)
    -->
    <suppress
            checks="JavadocVariable"
            files=".*Config\.java$|.*Initializer\.java$|.*Service\.java$|.*Application\.java$"
            message=".*"/>

    <!--
    Framework compatibility: Suppress MissingJavadocMethod for security role interface methods
    Security role interfaces use annotation-based configuration, methods are framework callbacks
    Pattern matches security role interfaces
    -->
    <suppress
            checks="MissingJavadocMethod"
            files=".*Role\.java$"
            message=".*"/>

    <!--
    Framework compatibility: Suppress JavadocVariable for interface constants
    Interface constants (like CODE in role interfaces) are self-documenting
    Pattern matches security role interfaces
    -->
    <suppress
            checks="JavadocVariable"
            files=".*Role\.java$"
            message=".*"/>

    <!--
    Framework compatibility: Suppress MissingJavadocMethod for Spring Boot application methods
    Spring Boot @Bean, @EventListener methods are framework configuration, don't need javadoc
    Main method signature is standard and doesn't need javadoc
    -->
    <suppress
            checks="MissingJavadocMethod"
            files=".*Application\.java$"
            message=".*"/>

    <!--
    NOTE: HiddenField suppression REMOVED - this check is critical for code quality
    HiddenField detects when method parameters shadow class fields, which is a real bug
    This is NOT related to formatting and should be enabled
    If Lombok setters or interface methods cause issues, use @SuppressWarnings("checkstyle:HiddenField") on specific methods
    -->

    <!-- Framework compatibility: Suppress DesignForExtension for Jmix/Vaadin framework classes -->
    <!-- Framework views extend StandardView, StandardListView, StandardDetailView -->
    <!-- These classes are designed for extension by framework, not by application code -->
    <suppress
            checks="DesignForExtension"
            files=".*View\.java$|.*Configuration\.java$"/>

    <!-- Framework compatibility: Suppress MissingJavadocMethod for framework lifecycle methods -->
    <!-- Jmix/Vaadin lifecycle methods: onInit, onReady, onBeforeSave, onAfterSave, etc. -->
    <!-- These methods are framework callbacks and follow framework conventions -->
    <!-- Suppressed via file pattern above for all View classes -->

    <!-- Framework compatibility: Suppress AvoidStarImport for Jmix/Vaadin view package -->
    <!-- Jmix views use many classes from io.jmix.flowui.view package (events, annotations) -->
    <!-- Star import is acceptable for framework packages with many related classes -->
    <!-- Attempted explicit imports but classes are in different sub-packages, star import is cleaner -->
    <suppress
            checks="AvoidStarImport"
            files=".*View\.java$"
            message=".*io\.jmix\.flowui\.view\.\*"/>

    <!-- Framework compatibility: Suppress DesignForExtension for Spring Boot application class -->
    <!-- Spring Boot @SpringBootApplication class is designed for extension by framework -->
    <suppress
            checks="DesignForExtension"
            files=".*Application\.java$"/>

    <!-- Framework compatibility: Suppress DesignForExtension for Jmix framework classes -->
    <!-- DatabaseUserRepository extends AbstractDatabaseUserRepository (framework class) -->
    <!-- User implements JmixUserDetails (framework interface) -->
    <suppress
            checks="DesignForExtension"
            files=".*Repository\.java$|.*User\.java$"/>

    <!-- Test compatibility: Suppress MissingJavadocMethod for test methods -->
    <!-- Test methods are self-documenting through descriptive names and inline comments -->
    <!-- JUnit test methods follow testing conventions and don't require Javadoc -->
    <suppress
            checks="MissingJavadocMethod"
            files=".*Test\.java$|.*Tests\.java$"/>

    <!-- Test compatibility: Suppress JavadocMethod for test methods -->
    <!-- Test methods use descriptive names and inline comments for documentation -->
    <suppress
            checks="JavadocMethod"
            files=".*Test\.java$|.*Tests\.java$"/>

    <!-- Test compatibility: Suppress VisibilityModifier for test fields -->
    <!-- Test classes use @Autowired fields and package-private fields for test convenience -->
    <!-- This is a standard testing pattern and doesn't violate encapsulation in test context -->
    <suppress
            checks="VisibilityModifier"
            files=".*Test\.java$|.*Tests\.java$"/>

    <!-- Test compatibility: Suppress JavadocVariable for test fields -->
    <!-- Test classes use @Autowired fields and package-private fields for test convenience -->
    <!-- This is a standard testing pattern and doesn't violate encapsulation in test context -->
    <!-- Pattern includes test support classes in test_support package -->
    <suppress
            checks="JavadocVariable"
            files=".*Test\.java$|.*Tests\.java$|.*/test/.*\.java$|.*/test_support/.*\.java$"
            message=".*"/>

    <!-- Test compatibility: Suppress MissingJavadocMethod for test support classes -->
    <!-- Test support classes (like PostgresTestContainer) are utility classes for tests -->
    <!-- These methods are self-documenting through descriptive names -->
    <suppress
            checks="MissingJavadocMethod"
            files=".*/test_support/.*\.java$"
            message=".*"/>

    <!-- Test compatibility: Suppress ConstantName for ArchUnit test rules -->
    <!-- ArchUnit convention uses snake_case for rule names, which conflicts with Java constant naming -->
    <suppress
            checks="ConstantName"
            files=".*/architecture/.*\.java$"
            message=".*"/>
</suppressions>
