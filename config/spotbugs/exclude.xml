<?xml version="1.0" encoding="UTF-8"?>
<!--
    SpotBugs exclusion filter for strict mode.
    
    Exclusions are only for:
    1. Lombok-generated code (getters, setters, constructors)
    2. Framework-specific patterns (Jmix/Vaadin lifecycle methods)
    
    All exclusions are documented with justification.
-->
<FindBugsFilter>
    <!-- Lombok compatibility: Exclude Lombok-generated methods from SpotBugs checks -->
    <!-- Lombok generates getters, setters, equals, hashCode, toString, constructors -->
    <!-- These methods follow standard JavaBean conventions and are generated code -->
    <!-- Match pattern: methods starting with get, set, is, has, equals, hashCode, toString -->
    <Match>
        <Method name="get[A-Z].*|set[A-Z].*|is[A-Z].*|has[A-Z].*|equals|hashCode|toString"/>
    </Match>
    
    <!-- Lombok compatibility: Exclude constructors generated by @RequiredArgsConstructor, @AllArgsConstructor, @NoArgsConstructor -->
    <Match>
        <Method name="&lt;init&gt;"/>
        <Class name="~.*"/>
        <Bug pattern=".*"/>
    </Match>
    
    <!-- Framework compatibility: Exclude framework lifecycle methods -->
    <!-- Jmix/Vaadin lifecycle methods: onInit, onReady, onBeforeSave, onAfterSave, etc. -->
    <Match>
        <Method name="onInit.*|onReady.*|onBeforeSave.*|onAfterSave.*|onValidation.*|onInitEntity.*"/>
        <Class name="~.*View"/>
    </Match>
</FindBugsFilter>
