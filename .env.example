# Environment Variables Template
# Copy this file to .env and update values for your environment
# The .env file is ignored by git (see .gitignore)

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
# Database connection URL
# Format: jdbc:postgresql://host:port/database
MAIN_DATASOURCE_URL=jdbc:postgresql://localhost:5432/start

# Database username
MAIN_DATASOURCE_USERNAME=start

# Database password (REQUIRED - change in production!)
MAIN_DATASOURCE_PASSWORD=start

# ============================================
# Application Configuration
# ============================================
# Spring profiles: default, docker, kubernetes, prod
# Multiple profiles can be specified: docker,prod
SPRING_PROFILES_ACTIVE=default

# Server port
SERVER_PORT=8080

# ============================================
# Logging Configuration
# ============================================
# Logging levels: TRACE, DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_DIGTP_START=INFO
LOGGING_LEVEL_ORG_ATMOSPHERE=warn
LOGGING_LEVEL_ECLIPSELINK_LOGGING_SQL=info
LOGGING_LEVEL_IO_JMIX_CORE_DATASTORE=info
LOGGING_LEVEL_IO_JMIX_CORE_ACCESS_LOGGER=debug
LOGGING_LEVEL_IO_JMIX=info
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=info

# ============================================
# Observability (OpenTelemetry)
# ============================================
# OpenTelemetry logging endpoint
# Leave empty to disable OpenTelemetry logging
MANAGEMENT_OTLP_LOGGING_ENDPOINT=http://otel-collector:4318/v1/logs

# ============================================
# Development Only (default profile)
# ============================================
# Default login credentials (only for development)
# These are ignored in production profile
UI_LOGIN_DEFAULT_USERNAME=admin
UI_LOGIN_DEFAULT_PASSWORD=admin
