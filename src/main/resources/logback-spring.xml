<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Use LOGGING_FILE_PATH from environment, fallback to 'logs' -->
    <property name="LOG_PATH" value="${LOGGING_FILE_PATH:-logs}"/>

    <!-- Console appender with professional color highlighting -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%15.15thread] %highlight(%-5level) %cyan(%-50.50logger{49})
                [%yellow(%X{requestId:-})] [%blue(%X{userId:-})] : %m%n%ex
            </pattern>
        </encoder>
    </appender>

    <!-- Async file appender for better performance -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- Main application log file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{60} [%X{requestId:-}] [%X{userId:-}] -
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- SQL queries log (separate from main log) -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/sql.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/sql.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{60} [%X{requestId:-}] [%X{userId:-}] -
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Security events log -->
    <appender name="SECURITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/security.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{requestId:-}] [%X{userId:-}] -
                %msg%n%ex{full}
            </pattern>
        </encoder>
    </appender>

    <!-- Errors and warnings log -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/errors.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/errors.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} [%X{requestId:-}] [%X{userId:-}] -
                %msg%n%ex{full}
            </pattern>
        </encoder>
    </appender>

    <!-- Warnings log -->
    <appender name="WARN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/warnings.log</file>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/warnings.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{60} [%X{requestId:-}] [%X{userId:-}] -
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Audit log for security and business events -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archive/audit.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>365</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{60} [%X{requestId:-}] [%X{userId:-}] -
                %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- OpenTelemetry Appender (defined globally, referenced conditionally) -->
    <appender name="OpenTelemetry" class="io.opentelemetry.instrumentation.logback.appender.v1_0.OpenTelemetryAppender">
        <captureMdcAttributes>*</captureMdcAttributes>
    </appender>

    <!-- Application logger - only application logs -->
    <logger name="com.digtp.start" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Application logger with OpenTelemetry for docker/kubernetes profiles -->
    <springProfile name="docker,kubernetes">
        <logger name="com.digtp.start" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="OpenTelemetry"/>
        </logger>
    </springProfile>

    <!-- Audit logger - security and business events -->
    <logger name="com.digtp.start.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE"/>
        <appender-ref ref="ASYNC_FILE"/>
    </logger>

    <!-- Application Security logger - brute-force detection, suspicious activity -->
    <logger name="com.digtp.start.security" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Spring Security logger - authentication and authorization -->
    <logger name="org.springframework.security" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_FILE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- EclipseLink SQL logger - separate from main logs -->
    <logger name="org.eclipse.persistence" level="INFO" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <!-- Jmix DataStore logger -->
    <logger name="io.jmix.core.datastore" level="INFO" additivity="false">
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <!-- Jmix Access Logger -->
    <logger name="io.jmix.core.AccessLogger" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Vaadin logger - reduce noise -->
    <logger name="com.vaadin" level="WARN" additivity="false">
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="WARN_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Suppress Tomcat session loading errors -->
    <logger name="org.apache.catalina.session.StandardManager" level="WARN" additivity="false">
        <appender-ref ref="WARN_FILE"/>
    </logger>

    <!-- Suppress Vaadin Push warnings (race condition on startup, not critical) -->
    <logger name="com.vaadin.flow.server.communication.PushAtmosphereHandler" level="ERROR" additivity="false">
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- Suppress Spring Security warning about web.ignoring() for VAADIN/push (comes from Jmix framework) -->
    <logger name="org.springframework.security.config.annotation.web.builders.WebSecurity" level="ERROR"
            additivity="false">
        <appender-ref ref="WARN_FILE"/>
    </logger>

    <!-- Suppress Vaadin dev server warnings about file paths (generated files from Jmix) -->
    <logger name="com.vaadin.flow.server.frontend.TaskUpdateImports" level="ERROR" additivity="false">
        <appender-ref ref="WARN_FILE"/>
    </logger>

    <!-- Production profile - reduce logging overhead -->
    <springProfile name="prod">
        <!-- Application logging - INFO only (no DEBUG) -->
        <logger name="com.digtp.start" level="INFO" additivity="false">
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
        </logger>

        <!-- Minimal SQL logging in production (security + performance) -->
        <logger name="org.eclipse.persistence" level="WARN" additivity="false">
            <appender-ref ref="SQL_FILE"/>
        </logger>

        <logger name="io.jmix.core.datastore" level="WARN" additivity="false">
            <appender-ref ref="SQL_FILE"/>
        </logger>

        <!-- Minimal Spring logs -->
        <logger name="org.springframework" level="WARN"/>

        <!-- Minimal Jmix logs -->
        <logger name="io.jmix" level="WARN"/>
    </springProfile>

    <!-- Root logger - minimal output -->
    <root level="INFO">
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- Root logger with OpenTelemetry for docker/kubernetes profiles -->
    <springProfile name="docker,kubernetes">
        <root level="INFO">
            <appender-ref ref="ASYNC_FILE"/>
            <appender-ref ref="ERROR_FILE"/>
            <appender-ref ref="OpenTelemetry"/>
        </root>
    </springProfile>
</configuration>
